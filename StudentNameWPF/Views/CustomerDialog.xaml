<Window x:Class="StudentNameWPF.Views.CustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding DialogTitle}" 
        Height="600" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="{Binding DialogTitle}" FontSize="24" FontWeight="Bold" Foreground="#333333" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding DialogSubtitle}" FontSize="14" Foreground="#666666" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Full Name -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,15">
                        <TextBlock Text="Full Name *" FontWeight="Bold" Margin="0,0,0,5" Foreground="#333333"/>
                        <TextBox x:Name="FullNameTextBox" 
                                 Text="{Binding CustomerFullName, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="10" 
                                 BorderBrush="#CCCCCC" 
                                 BorderThickness="1" 
                                 Background="White"/>
                    </StackPanel>
                    
                    <!-- Email -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,15">
                        <TextBlock Text="Email Address *" FontWeight="Bold" Margin="0,0,0,5" Foreground="#333333"/>
                        <TextBox x:Name="EmailTextBox" 
                                 Text="{Binding EmailAddress, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="10" 
                                 BorderBrush="#CCCCCC" 
                                 BorderThickness="1" 
                                 Background="White"/>
                    </StackPanel>
                    
                    <!-- Telephone -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,15">
                        <TextBlock Text="Telephone *" FontWeight="Bold" Margin="0,0,0,5" Foreground="#333333"/>
                        <TextBox x:Name="TelephoneTextBox" 
                                 Text="{Binding Telephone, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="10" 
                                 BorderBrush="#CCCCCC" 
                                 BorderThickness="1" 
                                 Background="White"/>
                    </StackPanel>
                    
                    <!-- Birthday -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,15">
                        <TextBlock Text="Birthday *" FontWeight="Bold" Margin="0,0,0,5" Foreground="#333333"/>
                        <DatePicker x:Name="BirthdayDatePicker" 
                                    SelectedDate="{Binding CustomerBirthday}"
                                    Padding="10" 
                                    BorderBrush="#CCCCCC" 
                                    BorderThickness="1" 
                                    Background="White"/>
                    </StackPanel>
                    
                    <!-- Password (only for Add) -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,10,15" Visibility="{Binding ShowPassword, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Password *" FontWeight="Bold" Margin="0,0,0,5" Foreground="#333333"/>
                        <PasswordBox x:Name="PasswordBox" 
                                     Padding="10" 
                                     BorderBrush="#CCCCCC" 
                                     BorderThickness="1" 
                                     Background="White"/>
                    </StackPanel>
                    
                    <!-- Status -->
                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="10,0,0,15">
                        <TextBlock Text="Status" FontWeight="Bold" Margin="0,0,0,5" Foreground="#333333"/>
                        <ComboBox x:Name="StatusComboBox" 
                                  SelectedValue="{Binding CustomerStatus}"
                                  Padding="10" 
                                  BorderBrush="#CCCCCC" 
                                  BorderThickness="1" 
                                  Background="White">
                            <ComboBoxItem Content="Active" Tag="1"/>
                            <ComboBoxItem Content="Inactive" Tag="0"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>
                
                <!-- Validation Messages -->
                <Border Background="#FFF3CD" BorderBrush="#FFEAA7" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,10,0,0" Visibility="{Binding HasValidationErrors, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="⚠️ Please fix the following errors:" FontWeight="Bold" Foreground="#856404" Margin="0,0,0,5"/>
                        <ItemsControl ItemsSource="{Binding ValidationErrors}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="#856404" Margin="0,2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Action Buttons -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="20,15,20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" 
                        Command="{Binding CancelCommand}"
                        Padding="20,10" 
                        Background="#6C757D" 
                        Foreground="White" 
                        BorderThickness="0" 
                        Margin="0,0,10,0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5A6268"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button Content="Save" 
                        Command="{Binding SaveCommand}"
                        Padding="20,10" 
                        Background="#28A745" 
                        Foreground="White" 
                        BorderThickness="0" 
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#218838"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
