<Window x:Class="StudentNameWPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FUMiniHotelSystem - Login" 
        Height="800" 
        Width="1350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Section - Motivational Area -->
        <Grid Grid.Column="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#E3F2FD" Offset="0"/>
                    <GradientStop Color="#F3E5F5" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            
            <!-- Main Content -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="60">
                <TextBlock Text="Fast, Efficient and Productive" 
                           FontSize="36" 
                           FontWeight="Bold" 
                           Foreground="#2C3E50" 
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,0,0,20"/>
                
                <TextBlock Text="Streamline your hotel operations with our comprehensive management system. Manage bookings, customers, and rooms with ease and efficiency." 
                           FontSize="16" 
                           Foreground="#5A6C7D" 
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           LineHeight="24"
                           TextAlignment="Center"/>
            </StackPanel>
            
            <!-- Footer -->
            <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="40,0,0,40">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="ðŸ‡ºðŸ‡¸" FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock Text="English" FontSize="14" Foreground="#5A6C7D" Margin="0,0,8,0"/>
                    <TextBlock Text="â–¼" FontSize="10" Foreground="#5A6C7D"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Terms" FontSize="14" Foreground="#3498DB" Margin="0,0,20,0" Cursor="Hand">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="#2980B9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock Text="Plans" FontSize="14" Foreground="#3498DB" Margin="0,0,20,0" Cursor="Hand">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="#2980B9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock Text="Contact Us" FontSize="14" Foreground="#3498DB" Cursor="Hand">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="#2980B9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </Grid>
        
        <!-- Right Section - Login Form -->
        <Grid Grid.Column="1" Background="White">
            <Border Background="White" 
                    CornerRadius="12" 
                    Margin="40"
                    Effect="{StaticResource DropShadowEffect}">
                <StackPanel Margin="60,50,60,50" VerticalAlignment="Center">
                    <!-- Header -->
                    <TextBlock Text="Sign In" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="#2C3E50" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Hotel Management System" 
                               FontSize="16" 
                               Foreground="#7F8C8D" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,40"/>
                    
                    <!-- Email Input -->
                    <TextBlock Text="Email" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,8"
                               Foreground="#2C3E50"/>
                    
                    <TextBox x:Name="EmailTextBox"
                             Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="16" 
                             Padding="15,12" 
                             BorderBrush="#BDC3C7" 
                             BorderThickness="1" 
                             Margin="0,0,0,20"
                             Background="White">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="BorderBrush" Value="#BDC3C7"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                                    CornerRadius="6">
                                                <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="#3498DB"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    
                    <!-- Password Input -->
                    <TextBlock Text="Password" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,8"
                               Foreground="#2C3E50"/>
                    
                    <PasswordBox x:Name="PasswordBox"
                                 FontSize="16" 
                                 Padding="15,12" 
                                 BorderBrush="#BDC3C7" 
                                 BorderThickness="1" 
                                 Margin="0,0,0,20"
                                 Background="White"
                                 PasswordChanged="PasswordBox_PasswordChanged">
                        <PasswordBox.Style>
                            <Style TargetType="PasswordBox">
                                <Setter Property="BorderBrush" Value="#BDC3C7"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="PasswordBox">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                                    CornerRadius="6">
                                                <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="#3498DB"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </PasswordBox.Style>
                    </PasswordBox>
                    
                    <!-- Remember me and Forgot password -->
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <CheckBox Grid.Column="0" 
                                  Content="Remember me" 
                                  FontSize="14" 
                                  Foreground="#5A6C7D"
                                  IsChecked="True"/>
                        
                        <TextBlock Grid.Column="1" 
                                   Text="Forgot password?" 
                                   FontSize="14" 
                                   Foreground="#3498DB" 
                                   Cursor="Hand"
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="#2980B9"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                    
                    <!-- Error Message -->
                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="#E74C3C" 
                               FontSize="12" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,20"
                               TextWrapping="Wrap"/>
                    
                    <!-- Login Button -->
                    <Button Content="Sign In" 
                            Command="{Binding LoginCommand}"
                            FontSize="16" 
                            FontWeight="SemiBold" 
                            Padding="20,15" 
                            Foreground="White" 
                            BorderThickness="0" 
                            Margin="0,0,0,30"
                            Cursor="Hand"
                            HorizontalAlignment="Stretch"
                            Background="#3498DB">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#3498DB"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="6" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2980B9"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#21618C"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Loading Indicator -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                Margin="0,20,0,0"
                                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Ellipse Width="8" Height="8" Fill="#3498DB" Margin="0,0,8,0">
                            <Ellipse.RenderTransform>
                                <RotateTransform x:Name="LoadingRotation"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <TextBlock Text="Signing in..." 
                                   Foreground="#7F8C8D" 
                                   FontSize="14"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
