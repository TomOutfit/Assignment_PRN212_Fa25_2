<Window x:Class="StudentNameWPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FUMiniHotelSystem - Login" 
        Height="800" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Section - Branding Area -->
        <Grid Grid.Column="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#E3F2FD" Offset="0"/>
                    <GradientStop Color="#F3E5F5" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            
            <!-- Background Pattern -->
            <Canvas>
                <!-- Abstract curved shapes -->
                <Path Fill="#BBDEFB" Opacity="0.3">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure StartPoint="50,100">
                                <QuadraticBezierSegment Point1="200,50" Point2="300,150"/>
                                <QuadraticBezierSegment Point1="150,200" Point2="50,100"/>
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                </Path>
                <Path Fill="#C5CAE9" Opacity="0.2">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure StartPoint="200,50">
                                <QuadraticBezierSegment Point1="400,100" Point2="350,300"/>
                                <QuadraticBezierSegment Point1="250,250" Point2="200,50"/>
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                </Path>
            </Canvas>
            
            <!-- Frosted Glass Box -->
            <Border Background="White" 
                    Opacity="0.9" 
                    CornerRadius="20" 
                    Margin="80,120,80,120"
                    Effect="{StaticResource DropShadowEffect}">
                <StackPanel Margin="40,50">
                    <TextBlock Text="â–º Welcome to" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               Margin="0,0,0,5"/>
                    <TextBlock Text="FUMiniHotel" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               Margin="0,0,0,5"/>
                    <TextBlock Text="Management" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               Margin="0,0,0,5"/>
                    <TextBlock Text="System." 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               Margin="0,0,0,30"/>
                    
                    <TextBlock Text="Streamline your hotel operations." 
                               FontSize="16" 
                               Foreground="White" 
                               Opacity="0.8" 
                               Margin="0,0,0,5"/>
                    <TextBlock Text="Manage with ease and efficiency." 
                               FontSize="16" 
                               Foreground="White" 
                               Opacity="0.8"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Right Section - Login Form -->
        <Grid Grid.Column="1" Background="White">
            <StackPanel Margin="60,80,60,80" VerticalAlignment="Center">
                <!-- Logo -->
                <Border Width="50" Height="50" 
                        Background="#667eea" 
                        CornerRadius="25" 
                        Margin="0,0,0,30"
                        HorizontalAlignment="Left">
                    <TextBlock Text="ðŸ¨" 
                               FontSize="24" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>
                
                <!-- Greeting -->
                <TextBlock Text="Hey, hello ðŸ‘‹" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#333333" 
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="Enter your credentials to access the system." 
                           FontSize="14" 
                           Foreground="#666666" 
                           Margin="0,0,0,40"/>
                
                <!-- Email Input -->
                <TextBlock Text="Email" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,8"
                           Foreground="#333333"/>
                
                <TextBox x:Name="EmailTextBox"
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="16" 
                         Padding="15,12" 
                         BorderBrush="#E0E0E0" 
                         BorderThickness="1" 
                         Margin="0,0,0,20"
                         Background="White">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            <Style.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="#667eea"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                
                <!-- Password Input -->
                <TextBlock Text="Password" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,8"
                           Foreground="#333333"/>
                
                <PasswordBox x:Name="PasswordBox"
                             FontSize="16" 
                             Padding="15,12" 
                             BorderBrush="#E0E0E0" 
                             BorderThickness="1" 
                             Margin="0,0,0,20"
                             Background="White"
                             PasswordChanged="PasswordBox_PasswordChanged">
                    <PasswordBox.Style>
                        <Style TargetType="PasswordBox">
                            <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            <Style.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="#667eea"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </PasswordBox.Style>
                </PasswordBox>
                
                <!-- Remember me and Forgot password -->
                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <CheckBox Grid.Column="0" 
                              Content="Remember me" 
                              FontSize="14" 
                              Foreground="#666666"
                              IsChecked="True"/>
                    
                    <TextBlock Grid.Column="1" 
                               Text="Forgot password?" 
                               FontSize="14" 
                               Foreground="#667eea" 
                               Cursor="Hand"
                               VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="#5a6fd8"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
                
                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="Red" 
                           FontSize="12" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20"
                           TextWrapping="Wrap"/>
                
                <!-- Login Button -->
                <Button Content="Login" 
                        Command="{Binding LoginCommand}"
                        FontSize="16" 
                        FontWeight="SemiBold" 
                        Padding="20,15" 
                        Foreground="White" 
                        BorderThickness="0" 
                        Margin="0,0,0,20"
                        Cursor="Hand"
                        HorizontalAlignment="Stretch">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#667eea" Offset="0"/>
                            <GradientStop Color="#764ba2" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Opacity" Value="0.8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                
                <!-- Loading Indicator -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,30,0,0"
                            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Ellipse Width="10" Height="10" Fill="#667eea" Margin="0,0,5,0">
                        <Ellipse.RenderTransform>
                            <RotateTransform x:Name="LoadingRotation"/>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    <TextBlock Text="Logging in..." 
                               Foreground="#666666" 
                               FontSize="12"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
