<Window x:Class="StudentNameWPF.Views.RealtimeDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:charts="clr-namespace:StudentNameWPF.Views.Charts"
        Title="FUMiniHotel System - Realtime Dashboard" 
        Height="750" 
        Width="1250"
        WindowStartupLocation="CenterScreen"
        Background="#F8FAFC"
        FontFamily="Segoe UI">
    
    <Window.Resources>
        <!-- Modern Drop Shadow Effect -->
        <DropShadowEffect x:Key="ModernDropShadow" 
                          Color="Black" 
                          BlurRadius="12" 
                          ShadowDepth="4" 
                          Opacity="0.08"/>
        
        <!-- Card Style -->
        <Style x:Key="ModernCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Effect" Value="{StaticResource ModernDropShadow}"/>
            <Setter Property="Padding" Value="16"/>
        </Style>
        
        <!-- Metric Card Style -->
        <Style x:Key="MetricCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Effect" Value="{StaticResource ModernDropShadow}"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="8"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Modern Header -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1" Padding="24,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="📊 Realtime Hotel Dashboard" 
                               FontSize="28" 
                               FontWeight="SemiBold" 
                               Foreground="#1E293B"
                               Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="8" Height="8" Fill="#10B981" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding StatusMessage}" 
                                   FontSize="14" 
                                   Foreground="#64748B" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="{Binding IsRealtimeEnabled, Converter={StaticResource BooleanToTextConverter}, ConverterParameter='⏹ Stop|▶ Start'}" 
                            Command="{Binding ToggleRealtimeCommand}"
                            Background="#EF4444" 
                            Foreground="White" 
                            Padding="16,10" 
                            Margin="0,0,12,0"
                            FontWeight="Medium"
                            BorderThickness="0" Width="82">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#EF4444"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="8" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#DC2626"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="🔄 Refresh" 
                            Command="{Binding RefreshDataCommand}"
                            Background="#3B82F6" 
                            Foreground="White" 
                            Padding="16,10"
                            Margin="0,0,12,0"
                            FontWeight="Medium"
                            BorderThickness="0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#3B82F6"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="8" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2563EB"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="📤 Export" 
                            Command="{Binding ExportDataCommand}"
                            Background="#10B981" 
                            Foreground="White" 
                            Padding="16,10"
                            FontWeight="Medium"
                            BorderThickness="0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#10B981"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="8" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#059669"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Key Metrics Cards -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Total Customers -->
                    <Border Grid.Column="0" Style="{StaticResource MetricCardStyle}">
                        <StackPanel>
                            <TextBlock Text="👥" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding TotalCustomers}" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center" 
                                       Foreground="#3B82F6"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="Total Customers" 
                                       FontSize="12" 
                                       HorizontalAlignment="Center" 
                                       Foreground="#64748B"
                                       FontWeight="Medium"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Total Bookings -->
                    <Border Grid.Column="1" Style="{StaticResource MetricCardStyle}">
                        <StackPanel>
                            <TextBlock Text="📅" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding TotalBookings}" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center" 
                                       Foreground="#F59E0B"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="Total Bookings" 
                                       FontSize="12" 
                                       HorizontalAlignment="Center" 
                                       Foreground="#64748B"
                                       FontWeight="Medium"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Total Rooms -->
                    <Border Grid.Column="2" Style="{StaticResource MetricCardStyle}">
                        <StackPanel>
                            <TextBlock Text="🏨" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding TotalRooms}" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center" 
                                       Foreground="#8B5CF6"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="Total Rooms" 
                                       FontSize="12" 
                                       HorizontalAlignment="Center" 
                                       Foreground="#64748B"
                                       FontWeight="Medium"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Total Revenue -->
                    <Border Grid.Column="3" Style="{StaticResource MetricCardStyle}">
                        <StackPanel>
                            <TextBlock Text="💰" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding TotalRevenue, StringFormat='${0:0}'}" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center" 
                                       Foreground="#10B981"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="Total Revenue" 
                                       FontSize="12" 
                                       HorizontalAlignment="Center" 
                                       Foreground="#64748B"
                                       FontWeight="Medium"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Average Booking Value -->
                    <Border Grid.Column="4" Style="{StaticResource MetricCardStyle}">
                        <StackPanel>
                            <TextBlock Text="💲" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding AverageBookingValue, StringFormat='${0:0}'}" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center" 
                                       Foreground="#F97316"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="Avg. Booking Value" 
                                       FontSize="12" 
                                       HorizontalAlignment="Center" 
                                       Foreground="#64748B"
                                       FontWeight="Medium"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Occupancy Rate -->
                    <Border Grid.Column="5" Style="{StaticResource MetricCardStyle}">
                        <StackPanel>
                            <TextBlock Text="📈" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding OccupancyRate, StringFormat={}{0:F1}%}" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center" 
                                       Foreground="#06B6D4"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="Occupancy Rate" 
                                       FontSize="12" 
                                       HorizontalAlignment="Center" 
                                       Foreground="#64748B"
                                       FontWeight="Medium"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Charts Section -->
                <Grid Grid.Row="1" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="250"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Monthly Revenue Chart -->
                    <Border Grid.Column="0" Style="{StaticResource ModernCardStyle}" Margin="0,0,12,0">
                        <StackPanel>
                            <TextBlock Text="📈 Monthly Revenue Trend" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Foreground="#1E293B"
                                       Margin="0,0,0,16"/>
                            <charts:MonthlyRevenueChart x:Name="MonthlyRevenueChart" Height="190"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Customer Distribution Chart -->
                    <Border Grid.Column="1" Style="{StaticResource ModernCardStyle}" Margin="12,0,0,0">
                        <StackPanel>
                            <TextBlock Text="👥 Customer Distribution" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Foreground="#1E293B"
                                       Margin="0,0,0,16"/>
                            <charts:CustomerDistributionChart x:Name="CustomerDistributionChart" Height="190"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Recent Bookings Table -->
                <Border Grid.Row="2" Style="{StaticResource ModernCardStyle}">
                    <StackPanel>
                        <TextBlock Text="📋 Recent Bookings" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Foreground="#1E293B"
                                   Margin="0,0,0,16"/>
                        
                        <DataGrid ItemsSource="{Binding RecentBookings}" 
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="False" 
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  RowBackground="Transparent"
                                  AlternatingRowBackground="#F8FAFC">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#F1F5F9"/>
                                    <Setter Property="Foreground" Value="#475569"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Padding" Value="12,8"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Booking ID" 
                                                    Binding="{Binding BookingID}" 
                                                    Width="100"/>
                                <DataGridTextColumn Header="Customer" 
                                                    Binding="{Binding CustomerName}" 
                                                    Width="*"/>
                                <DataGridTextColumn Header="Room" 
                                                    Binding="{Binding RoomNumber}" 
                                                    Width="100"/>
                                <DataGridTextColumn Header="Check-in Date" 
                                                    Binding="{Binding CheckInDate, StringFormat=yyyy-MM-dd}" 
                                                    Width="120"/>
                                <DataGridTextColumn Header="Amount" 
                                                    Binding="{Binding TotalAmount, StringFormat='${0:0}'}" 
                                                    Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>